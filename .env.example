# Cold Solutions CRM Environment Variables
# Copy this file to .env.local for development

# Notion API Configuration
# Get your Notion API key from https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASES=[{"name":"inbound-voice-leads","id":"your_database_id","type":"leads","description":"Cold Solutions Inbound"},{"name":"website-leads","id":"your_database_id","type":"leads","description":"Cold Solutions Website"},{"name":"ai-audit-pre-call","id":"your_database_id","type":"leads","description":"Ai Audit Agent(Pre Call)"},{"name":"ai-audit-post-call","id":"your_database_id","type":"leads","description":"Leads Ai Audit(Post Call)"},{"name":"whatsapp-followup-leads","id":"your_database_id","type":"leads","description":"Whatsapp Follow Up leads"},{"name":"whatsapp-bot-leads","id":"your_database_id","type":"leads","description":"Whatsapp Bot Leads"}]
DASHBOARD_WEBHOOK_URL=your_dashboard_webhook_url_here

# Calendly API Configuration (Optional)
CALENDLY_API_TOKEN=your_calendly_api_token_here
CALENDLY_ORG_URI=your_calendly_org_uri_here

# Authentication (Optional - for future enhancement)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

